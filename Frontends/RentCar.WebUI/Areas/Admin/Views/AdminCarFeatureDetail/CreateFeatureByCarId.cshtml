@model List<RentCar.Dto.FeatureDtos.ResultFeatureDto>
@{
    ViewBag.Title = "Araca Özellik Ata";
    var carId = ViewBag.CarId as int? ?? 0;
}

<h4>Araca Özellik Ata</h4>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="CreateFeatureByCarId" asp-route-id="@carId" method="post">
    <div class="form-group">
        <label for="featureId">Özellik Seçin</label>
        <select class="form-control" id="featureId" name="featureId" required>
            <option value="">Seçiniz</option>
            @foreach (var feature in Model)
            {
                <option value="@feature.FeatureID">@feature.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Ata</button>
    <a href="@Url.Action("Index", new { id = carId })" class="btn btn-secondary">Geri</a>
</form>